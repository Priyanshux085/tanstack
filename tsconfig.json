{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM"],
    "target": "es2022",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    "strictNullChecks": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "paths": {
      "@/*": ["./src/*"]
    },

    // Best practices
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".tanstack"]
}
